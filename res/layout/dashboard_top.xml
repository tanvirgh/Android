<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/topRow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_total_power"
            android:layout_width="fill_parent"
            style="@style/HomeButton"
            android:layout_weight="1"
            android:drawableTop="@drawable/voltage"
            android:text="54 walts in use" 
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@drawable/bgheaderleft"/>

        <LinearLayout
            android:id="@+id/topRowRight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
             android:layout_weight="1"
             android:orientation="vertical"
             android:background="@drawable/bgheaderleft">

            <Button
                android:id="@+id/home_btn_room"
                style="@style/HomeButton"
                android:drawableLeft="@drawable/roomsmall"
                android:paddingLeft="13dp"
                android:paddingRight="5dp"
                android:textSize="14sp"
               android:gravity="start|center_vertical"
                android:drawablePadding="14dp"/>

            <Button
                android:id="@+id/home_btn_fan"
                style="@style/HomeButton"
                android:drawableLeft="@drawable/fansmall"
                android:paddingLeft="13dp"
                android:paddingRight="5dp"
                android:textSize="14sp"
                android:gravity="start|center_vertical"
                android:drawablePadding="14dp" />

            <Button
                android:id="@+id/home_btn_bulb"
                style="@style/HomeButton"
                android:drawableLeft="@drawable/bulbsmall"
                android:paddingLeft="13dp"
                android:paddingRight="5dp"
                android:textSize="14sp"
              android:gravity="start|center_vertical"
                android:drawablePadding="14dp"/>
           

            <Button
                android:id="@+id/home_btn_ac"
                style="@style/HomeButton"
                android:drawableLeft="@drawable/ac2_web"
                android:paddingLeft="13dp"
                android:paddingRight="5dp"
                android:textSize="14sp"
                android:gravity="start|center_vertical"
                android:drawablePadding="14dp"/>
             <Button
                android:id="@+id/home_btn_curtain"
                style="@style/HomeButton"
                android:drawableLeft="@drawable/curtainsmall"
                android:paddingLeft="13dp"
                android:paddingRight="5dp"
                android:textSize="14sp"
                android:gravity="start|center_vertical"
                android:drawablePadding="14dp"/>
        </LinearLayout>
    </LinearLayout>
