<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logbgnewpre" >

    <RelativeLayout
        android:id="@+id/rlOnlinePaymentHeading"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:visibility="visible" >

        <com.sinepulse.app.custom.controls.CustomTextView
            android:id="@+id/tvUserProfileHeadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:text="   Profile"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>
     <ProgressBar
                android:id="@+id/userProfileProgressBar"
                android:layout_width="240dp"
                android:layout_height="30dp"
               android:layout_marginTop="15dp"
                android:layout_marginLeft="42dp"
                android:layout_below="@+id/rlOnlinePaymentHeading" />

    <ScrollView
        android:id="@+id/body"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/rlOnlinePaymentHeading"
        android:layout_marginBottom="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

           

            <RelativeLayout
                android:id="@+id/rlFirstName"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="32dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <!-- android:background="@drawable/online_payment_first_row" -->

                <com.sinepulse.app.custom.controls.CustomTextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:text="Name"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />
                <!-- android:text="Fornavn" -->

                <com.sinepulse.app.custom.controls.CustomEditText
                    android:id="@+id/etFirstName"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tvFirstName"
                    android:background="@drawable/userprofile_et_bg"
                    android:focusable="false"
                   android:ellipsize="end"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlUserName"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <com.sinepulse.app.custom.controls.CustomTextView
                    android:id="@+id/tvUSerName"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:text="User Name"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

                <com.sinepulse.app.custom.controls.CustomEditText
                    android:id="@+id/etUserName"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tvUSerName"
                    android:background="@drawable/userprofile_et_bg"
                    android:ems="10"
                    android:focusable="false"
                    android:lines="1"
					android:scrollHorizontally="true"
					android:ellipsize="end"
					android:singleLine="true"
					android:editable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlEmail"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <com.sinepulse.app.custom.controls.CustomTextView
                    android:id="@+id/tvEmail"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:text="Email"
                    android:textColor="@color/textColor"
                    android:textSize="12sp" />

                <com.sinepulse.app.custom.controls.CustomEditText
                    android:id="@+id/etEmail"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tvEmail"
                    android:background="@drawable/userprofile_et_bg"
                    android:ems="10"
                    android:lines="1"
					android:scrollHorizontally="true"
					android:ellipsize="end"
					android:singleLine="true"
					android:editable="false"
                    android:focusable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSex"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <com.sinepulse.app.custom.controls.CustomTextView
                    android:id="@+id/tvSex"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:text="Sex"
                    android:textColor="@color/textColor"
                    android:textSize="12sp" />

                <com.sinepulse.app.custom.controls.CustomEditText
                    android:id="@+id/etSex"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tvSex"
                    android:background="@drawable/userprofile_et_bg"
                    android:ems="10"
                    android:focusable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rldob"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <com.sinepulse.app.custom.controls.CustomTextView
                    android:id="@+id/tvdob"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:text="Date Of Birth"
                    android:textColor="@color/textColor"
                    android:textSize="12sp" />

                <com.sinepulse.app.custom.controls.CustomEditText
                    android:id="@+id/etdob"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tvdob"
                    android:background="@drawable/userprofile_et_bg"
                    android:ems="10"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <com.sinepulse.app.custom.controls.CustomTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:text="Address"
                    android:textColor="@color/textColor"
                    android:textSize="12sp" />

                <com.sinepulse.app.custom.controls.CustomEditText
                    android:id="@+id/etAddress"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tvAddress"
                    android:background="@drawable/userprofile_et_bg"
                    android:ellipsize="end"
                    android:ems="10"
                    android:focusable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlTelephone"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <com.sinepulse.app.custom.controls.CustomTextView
                    android:id="@+id/tvTelephone"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:text="Cell Phone"
                    android:textColor="@color/textColor"
                    android:textSize="12sp" />

                <com.sinepulse.app.custom.controls.CustomEditText
                    android:id="@+id/etTelephone"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tvTelephone"
                    android:background="@drawable/userprofile_et_bg"
                    android:ems="10"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:inputType="textPhonetic"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSex2"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone" >

                <com.sinepulse.app.custom.controls.CustomTextView
                    android:id="@+id/tvSex2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:text="Sex"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

                <com.sinepulse.app.custom.controls.CustomEditText
                    android:id="@+id/etSex2"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tvSex2"
                    android:background="@drawable/userprofile_et_bg"
                    android:focusable="false"
                    android:inputType="textPhonetic"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSocialSecurity"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone" >

                <com.sinepulse.app.custom.controls.CustomTextView
                    android:id="@+id/tvSocialSecurity"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:text="Social Security Number"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

                <com.sinepulse.app.custom.controls.CustomEditText
                    android:id="@+id/etSocialSecurity"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tvSocialSecurity"
                    android:background="@drawable/userprofile_et_bg"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="textPhonetic"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12dp" >

                    <requestFocus />
                </com.sinepulse.app.custom.controls.CustomEditText>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
       android:layout_marginTop="10dp"
        android:background="@drawable/bg_bottom"
        android:padding="5dp" >

        <com.sinepulse.app.custom.controls.CustomButton
            android:id="@+id/bRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/room_button_selector"
            android:contentDescription="@string/save" />

        <com.sinepulse.app.custom.controls.CustomButton
            android:id="@+id/bDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/dashboard_button_selector"
            android:contentDescription="@string/save" />

        <com.sinepulse.app.custom.controls.CustomButton
            android:id="@+id/bCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/camera_button_selector"
            android:contentDescription="@string/save" />
    </RelativeLayout>

</RelativeLayout>