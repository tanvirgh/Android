<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logbgnew" >

    <RelativeLayout
        android:id="@+id/rlOnlinePaymentHeading"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="14dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/tvUserProfileHeadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/userProfileProgressBar"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/userimage"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="0dp"
            android:paddingRight="30dp"
            android:paddingTop="5dp"
            android:text=" User Profile"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/userProfileProgressBar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/body"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/rlOnlinePaymentHeading"
        android:layout_marginBottom="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rlFirstName"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <!-- android:background="@drawable/online_payment_first_row" -->

                <TextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:text="Name"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />
                <!-- android:text="Fornavn" -->

                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tvFirstName"
                    android:background="@drawable/setting_username_background"
                    android:focusable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlLastName"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tvLastName"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:text="Efternavn"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvLastNameMenderoty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:text="*"
                    android:textColor="@color/textColor"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tvLastName"
                    android:background="@drawable/setting_username_background"
                    android:focusable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlEmail"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:text="Email"
                    android:textColor="@color/textColor"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tvEmail"
                    android:background="@drawable/setting_username_background"
                    android:focusable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlAddress"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:text="Address1"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tvAddress"
                    android:background="@drawable/setting_username_background"
                    android:focusable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlAddress2"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:id="@+id/tvAddress2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:text="Address2"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/etAddress2"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tvAddress2"
                    android:background="@drawable/setting_username_background"
                    android:focusable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlCity"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:text="City"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/etCity"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tvCity"
                    android:background="@drawable/setting_username_background"
                    android:focusable="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlTelephone"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:id="@+id/tvTelephone"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:text="Cell Phone"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/etTelephone"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tvTelephone"
                    android:background="@drawable/setting_username_background"
                    android:focusable="false"
                    android:inputType="textPhonetic"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSex"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:id="@+id/tvSex"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:text="Sex"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/etSex"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tvSex"
                    android:background="@drawable/setting_username_background"
                    android:focusable="false"
                    android:inputType="textPhonetic"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSocialSecurity"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:id="@+id/tvSocialSecurity"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:text="Social Security Number"
                    android:textColor="@color/textColor"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/etSocialSecurity"
                    android:layout_width="170dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tvSocialSecurity"
                    android:background="@drawable/setting_username_background"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="textPhonetic"
                    android:paddingLeft="5dp"
                    android:paddingRight="0dp"
                    android:textSize="12dp" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom"
        android:padding="5dp" >

        <Button
            android:id="@+id/bRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/room_button_selector"
            android:contentDescription="@string/save" />

        <Button
            android:id="@+id/bDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@drawable/dashboard_button_selector"
            android:contentDescription="@string/save" />

        <Button
            android:id="@+id/bCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/camera_button_selector"
            android:contentDescription="@string/save" />
    </RelativeLayout>

</RelativeLayout>