    <RelativeLayout
        android:id="@+id/rlItemDetails"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:gravity="left|center"
        android:orientation="vertical" >

        <com.sinepulse.app.custom.controls.CustomTextView
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivListItemImageRight"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:singleLine="true"
            android:src="@drawable/arrow_search_selected" />

        <com.sinepulse.app.custom.controls.CustomTextView
            android:id="@+id/room_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/room_name"
            android:gravity="right"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>