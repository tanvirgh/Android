<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticketlistRowItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/rlTicketDetails"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="3dp"
         android:gravity="left|center"
        android:padding="5dp" >
        
         <com.sinepulse.app.custom.controls.CustomTextView
            android:id="@+id/tvTicketNumber"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="TktNo"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

          <com.sinepulse.app.custom.controls.CustomTextView
              android:id="@+id/tvTktSubject"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:layout_alignBaseline="@+id/tvTicketNumber"
              android:layout_alignBottom="@+id/tvTicketNumber"
              android:layout_marginLeft="8dp"
              android:layout_toRightOf="@+id/tvTicketNumber"
              android:ellipsize="end"
              android:singleLine="true"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
              android:text="Subject"
              android:textColor="#FFFFFF"
              android:textSize="12sp"
              android:textStyle="bold" />

          <com.sinepulse.app.custom.controls.CustomTextView
              android:id="@+id/tvTktSubmissionDate"
              android:layout_width="70dp"
              android:layout_height="wrap_content"
              android:layout_alignBaseline="@+id/tvTktSubject"
              android:layout_alignBottom="@+id/tvTktSubject"
              android:layout_toRightOf="@+id/tvTktSubject"
              android:ellipsize="end"
                android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:gravity="left|center_vertical"
              android:singleLine="true"
              android:text="Date"
              android:textColor="#FFFFFF"
              android:textSize="12sp"
              android:textStyle="bold" />

          <com.sinepulse.app.custom.controls.CustomTextView
              android:id="@+id/tvTktStatus"
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:layout_alignBaseline="@+id/tvTktSubmissionDate"
              android:layout_alignBottom="@+id/tvTktSubmissionDate"
              android:layout_alignParentRight="true"
              android:ellipsize="end"
                android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:gravity="left|center_vertical"
              android:singleLine="true"
              android:text="Status"
              android:textColor="#FFFFFF"
              android:textSize="12sp"
              android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>