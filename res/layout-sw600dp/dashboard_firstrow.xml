<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/firstRow"
    android:baselineAligned="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/topRow"
    android:layout_marginTop="15dp"
    android:background="@drawable/bgmedium"
    android:onClick="middleViewClicked"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/firstRowLeft"
            style="@style/HomeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="58 w"
            android:paddingLeft="20dp"
            android:paddingRight="0dp"
            android:textSize="36sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/firstRowImage"
            style="@style/HomeButton"
            android:layout_centerInParent="true"
            android:src="@drawable/fanmedium_tab" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="15dp"
        android:paddingLeft="0dp" >

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/bgled"
            android:layout_marginTop="6dp"
              >

            <TextView
                android:id="@+id/firstRowRightUp"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 "
                android:layout_marginLeft="8dp"
                android:layout_gravity="end|center_vertical"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/firstRowRightUp"
                android:src="@drawable/greenled" 
                android:layout_alignParentTop="true"
                >
            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/bgled"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/firstRowRightDown"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="end|center_vertical"
                android:text="4 "
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/firstRowRightDown"
                android:src="@drawable/redled" 
                android:layout_alignParentTop="true">
            </ImageView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>