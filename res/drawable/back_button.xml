<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     
    <item android:state_pressed="false">
        <shape android:shape="rectangle" >
             <gradient
                android:angle="-90"
                android:centerColor="#8B7355"
                android:endColor="#8B7355"
                android:startColor="#8B7355"
                />
            
            <corners android:radius="3dp"       
                />
            <padding 
                android:left="40dip"
                android:right="40dip"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
             <gradient
                android:angle="-90"
               android:centerColor="#959595"
               android:endColor="#959595"
               android:startColor="#959595"  />
            
            <corners android:radius="3dp"
                />
            <padding 
                android:left="40dip"
                android:right="40dip"/>
        </shape>
    </item>
   
	
</selector>