        <item name="actionDropDownStyle">@style/DropDownNav.AppTheme</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.AppTheme</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.AppTheme</item>
        <item name="actionBarDivider">@drawable/abs__list_divider_holo_dark</item>
        <item name="android:actionBarDivider">@drawable/abs__list_divider_holo_dark</item>

        <!-- action bar back icon -->
        <item name="homeAsUpIndicator">@drawable/up_icon</item>
        <item name="android:homeAsUpIndicator">@drawable/up_icon</item>

        <!-- action bar button text style -->
        <!--
        <item name="actionMenuTextAppearance">@style/ActionBar.ActionMenuTextAppearance.AppTheme</item>
		<item name="android:actionMenuTextAppearance">@style/ActionBar.ActionMenuTextAppearance.AppTheme</item>
        -->
