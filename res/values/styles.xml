		<item name="android:itemBackground">@drawable/normal_rounded_button_bg</item>
        -->


        <!-- action bar popup menu background style -->
        <item name="popupMenuStyle">@style/PopupMenu.AppTheme</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.AppTheme</item>

        <!-- action bar popup menu item background style -->
        <item name="dropDownListViewStyle">@style/DropDownListView.AppTheme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.AppTheme</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="dropdownListPreferredItemHeight">30dp</item>
        <item name="android:actionBarWidgetTheme">@style/MyStyle</item>
        <item name="actionBarWidgetTheme">@style/MyStyle</item>
    </style>
