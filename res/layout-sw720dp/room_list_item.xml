<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/roomlistRowItem"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
   android:descendantFocusability="blocksDescendants"
    android:padding="15dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/ivListItemImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:scaleType="fitXY"
        android:singleLine="true"
       android:contentDescription="@string/todo"
        android:src="@drawable/ic_home" />

    <RelativeLayout
        android:id="@+id/rlItemDetails"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="left|center"
        android:orientation="vertical"
        android:layout_marginLeft="20dp" >

        <TextView
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"  />
        <ImageView
        android:id="@+id/ivListItemImageRight"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:singleLine="true"
       android:contentDescription="@string/todo"
        android:src="@drawable/icon_arrow_color" />
        <TextView
            android:id="@+id/room_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/room_name"
            android:layout_marginRight="25dp"
            android:gravity="right"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>