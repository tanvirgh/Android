    <RelativeLayout
        android:id="@+id/extraControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </RelativeLayout>

    <ImageView
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="0dp"
        android:layout_alignTop="@+id/down"
       android:visibility="invisible"
        android:contentDescription="@string/app_name"
        android:src="@drawable/reset" />
     <TextView
                android:id="@+id/tvResetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reset"
                 android:layout_marginLeft="14dp"
                android:layout_alignParentLeft="true"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:text="Reset"
                android:textStyle="bold"
                android:visibility="invisible" />

    <ImageView
        android:id="@+id/calibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/down"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:contentDescription="@string/app_name"
        android:visibility="invisible"
        android:src="@drawable/calibration" />
      <TextView
                android:id="@+id/tvCalibrateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_below="@+id/calibration"
                 android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:textColor="#FFFFFF"
                android:text="Calibrate"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="invisible" />

      <ImageView
          android:id="@+id/pause"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/up"
          android:layout_centerVertical="true"
          android:contentDescription="@string/app_name"
          android:src="@drawable/pause" />

      <ImageView
          android:id="@+id/up"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@+id/pause"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="64dp"
          android:contentDescription="@string/app_name"
          android:src="@drawable/curup" />

      <ImageView
          android:id="@+id/down"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/pause"
          android:layout_below="@+id/pause"
          android:layout_marginTop="97dp"
          android:contentDescription="@string/app_name"
          android:src="@drawable/curdown" />

</RelativeLayout>