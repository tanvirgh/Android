<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/secondRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/firstRow"
    android:layout_marginTop="20dp"
    android:background="@drawable/bgmedium"
    android:baselineAligned="false"
    android:onClick="middleViewClicked"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/secondRowLeft"
            style="@style/HomeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="0dp"
            android:text="58 w"
            android:textSize="36sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/secondRowImage"
            style="@style/HomeButton"
            android:layout_centerInParent="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/bulbmedium_tab" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="15dp" >

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginTop="6dp"
            android:background="@drawable/bgled" >

            <TextView
                android:id="@+id/secondRowRightUp"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginLeft="8dp"
                android:text="3 "
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/secondRowRightUp"
                android:src="@drawable/greenled" >
            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bgled" >

            <TextView
                android:id="@+id/secondRowRightDown"
                style="@style/HomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginLeft="8dp"
                android:text="4 "
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/secondRowRightDown"
                android:src="@drawable/redled" >
            </ImageView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>